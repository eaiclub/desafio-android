<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/apodFragment">

    <fragment
        android:id="@+id/apodFragment"
        android:name="com.jess.eaiclubnasa.view.fragment.ApodFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_apod" >
        <action
            android:id="@+id/action_apodFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.jess.eaiclubnasa.view.fragment.DetailFragment"
        android:label="@string/astronomy_picture_of_the_day"
        tools:layout="@layout/fragment_detail" >
        <action
            android:id="@+id/action_detailFragment_to_pictureZoomFragment"
            app:destination="@id/pictureZoomFragment" />
    </fragment>
    <fragment
        android:id="@+id/pictureZoomFragment"
        android:name="com.jess.eaiclubnasa.view.fragment.PictureZoomFragment"
        android:label="@string/picture_zoom"
        tools:layout="@layout/fragment_picture_zoom" />
</navigation>