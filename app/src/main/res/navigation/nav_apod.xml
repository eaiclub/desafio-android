<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_apod"
    app:startDestination="@id/apodListFragment">

    <fragment
        android:id="@+id/apodListFragment"
        android:name="com.example.infinitescroll.presentation.fragment.ApodListFragment"
        android:label="@string/apods" >
        <action
            android:id="@+id/action_apodListFragment_to_apodDetailFragment"
            app:destination="@id/apodDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/apodDetailFragment"
        android:name="com.example.infinitescroll.presentation.fragment.ApodDetailFragment"
        android:label="@string/details"
        tools:layout="@layout/fragment_apod_detail" >
        <argument
            android:name="apod"
            app:argType="com.example.infinitescroll.data.model.Apod" />
    </fragment>
</navigation>